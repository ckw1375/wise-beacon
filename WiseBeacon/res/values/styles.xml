<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/dropdown</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">17dp</item>
    </style>

    <style name="title_section_1" parent="@style/title_section_2">
        <item name="android:background">@drawable/title_1_bg</item>
    </style>

    <style name="title_section_2">
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="box_style">
        <item name="android:padding">6dp</item>
    </style>

    <style name="table_title">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/table_top_bg</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="table_item">
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>